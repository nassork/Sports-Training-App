@model AthleticTrainingWebApp.Models.RegisterViewModel
@{
    ViewBag.Title = "New Member";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <h2>Create a New Account</h2>

    <div class="form-group">
        @Html.Label("Account Type (Student or Instructor)", new {@class="col-md control-label" })
        <div class="col-md-10">
            @Html.DropDownList("RoleName", new SelectList(ViewBag.Roles, "Name", "Name"), new {@class = "form-control"})

        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2-col-md-10">
            <input type="submit" class="btn btn-default"value="Create"/>
        </div>
    </div>
}

